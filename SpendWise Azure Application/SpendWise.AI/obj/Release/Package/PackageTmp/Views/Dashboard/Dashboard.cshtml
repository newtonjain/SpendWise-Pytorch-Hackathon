<!-- JS -->

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script type="text/javascript" src="https://www.google.com/uds/api/visualization/1.0/40ff64b1d9d6b3213524485974f36cc0/format+en,default+en,ui+en,corechart+en.I.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">

        //Global Variable
        google.load("visualization", "1", { packages: ["corechart"] });

        $(document).ready(function () {



            //View Details Button
            $(".viewDetails").click(function () {

                $(".modal-body").html('');

                $.ajax({

                    type: 'GET',
                    url: '@Url.Action("GetDailySuggestions", "Dashboard")',
                    data: { type: $(this).attr("data-type") },
                    success: function (response) {
                        $(".modal-body").html(response);
                        $("#exampleModal").modal('show');
                    },
                    error: function () {
                        alert("Something wrong");
                    }

                });

            });


            $("#ShowSuggestions").click(function () {
                alert('hi');
            })

            //View Details Button
            $(".viewDetailsDailySpending").click(function () {

                $(".modal-body").html('');


                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetDailySuggestions", "Dashboard")',
                    data: { type: $(this).attr("data-type") },
                    success: function (response) {
                        $(".modal-body").html(response);
                        $("#exampleModal").modal('show');
                    },
                    error: function () {
                        alert("Something wrong");
                    }

                });

            });

            //Panel Body
            $.ajax({
                type: 'GET',
                url: '@Url.Action("DailyPredictiveExpense", "Dashboard")',
                success: function (response) {
                    $(".topCustomer").html(response);
                },
                error: function () {
                    alert("Something Wrong");
                }
            });

             //Chart Orders By Country
            GetPredictiveForecast()

            //Chart Customer By Country
            CustomersByCountry()

            //Chart Orders By Customer
            OrdersByCustomer()

            //Get All Customers
            CustomerList()




            //function  Orders By Country
            function GetPredictiveForecast() {

                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetPredictiveForecast", "Dashboard")',
                    success: function (response) {

                        console.log(response);

                        var data = new google.visualization.DataTable();

                        data.addColumn('string', 'Time');
                        data.addColumn('number', 'Predictive Expenses');
                        data.addColumn('number', 'SpendWise Expenses');

                        for (var i = 0; i < response.result.length; i++) {
                            data.addRow([response.result[i].time, response.result[i].Spending, response.result[i].Saving]);
                        }

                        var chart = new google.visualization.LineChart(document.getElementById('predictiveForecast'));

                        //chart.draw(data,
                        //  {
                        //      title: "",
                        //      position: "top",
                        //      fontsize: "14px",
                        //      chartArea: { width: '100%' },
                        //  });

                        //var data = google.visualization.arrayToDataTable([
                        //    ['Date', 'Predictive Expenses', 'SpendWise Expenses'],
                        //    ['09/08/2019', 32, 22],
                        //    ['09/09/2019', 36, 27],
                        //    ['09/10/2019', 25, 22],
                        //    ['09/11/2019', 33, 28],
                        //    ['09/12/2019', 27, 15],
                        //    ['09/13/2019', 29, 16],
                        //    ['09/14/2019', 36, 22]
                        //]);

                        chart.draw(data,
                            {
                                title: "",
                                position: "top",
                                fontsize: "14px",
                                curveType: 'function',
                                legend: { position: 'bottom' },
                                chartArea: { width: '100%' },
                                hAxis: {
                                    format: 'M/d',
                                    gridlines: { count: 15 }
                                },
                            });
                    },
                    error: function () {
                        alert("Error loading data!");
                    }
                });


                MonthlyExpense()

            }

            function CustomersByCountry() {

                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("CategoryAnalysis", "Dashboard")',
                    success: function (response) {

                        console.log(response);

                        var data = new google.visualization.DataTable();

                        data.addColumn('string', 'Category Type');
                        data.addColumn('number', 'Count');

                        for (var i = 0; i < response.result.length; i++) {
                            data.addRow([response.result[i].Category, response.result[i].Count]);
                        }


                        var chart = new google.visualization.PieChart(document.getElementById('customerByCountry'));

                        chart.draw(data,
                          {
                              title: "",
                              position: "top",
                              fontsize: "14px",
                              chartArea: { width: '100%' },
                          });
                    },
                    error: function () {
                        alert("Error loading data!");
                    }
                });

            }


                function MonthlyExpense() {
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("MonthlyExpense", "Dashboard")',
                    success: function (response) {

                        console.log(response);

                        $('#MonthlyExpense').html(response);
                    },
                    error: function () {
                        alert("Error loading data!");
                    }
                });

            }


    $(function (){
        $('a.edit').click(function () {
            var url = $(this).attr('href');
            window.open(url, "popupWindow", "width=600,height=800,scrollbars=yes");
            });
            return false;
        });





            function CustomerList() {
                //GET DATA FROM DATABASE TO FILL DATATABLE
                var oTable = $(".panel #myDataTable").DataTable({

                    "ajax": {
                        "url": "/CustomerOrder/GetCustomers",
                        "type": "GET",
                        "dataType": "json"
                    },

                    "columns": [
                        {
                            "data": "CustomerImage", "width": "50px", "render": function (data) {
                                return '<img class="rounded img-thumbnail" style="width:60px; height:58px;" src="/Images/Customers/' + data + '"/>';
                            }
                        },
                        { "data": "ID", "autowidth": true },
                        { "data": "CustomerName", "autowidth": true },
                        { "data": "CustomerEmail", "autowidth": true },
                        { "data": "CustomerPhone", "autowidth": true },
                        { "data": "CustomerCountry", "autowidth": true }
                    ]
                });
            }


        });

    </script>

}
