@model IEnumerable<SpendWise.AI.Models.DailyPredictiveViewModel>

<div class="list-group">
    @foreach (var predictiveItem in Model)
    {
        <a href="#" class="list-group-item">
            <div style="display: inline-block;width: 60px;">
                <img class="rounded img-thumbnail" src="@string.Format("/Images/Expenses/{0}", predictiveItem.ItemImage)" alt="" style="width:50px; height:60px;" />
            </div>
            @predictiveItem.ItemName
            <span class="label label-info"> @string.Format("{0}{1}", "", predictiveItem.AmountSpend) </span>
            <span class="label label-info"> @string.Format("{0}{1}", "", predictiveItem.ItemCategory) </span>
            @*<span class="label label-success" style="margin-left: 10px;"> @string.Format("{0} : {1}", "Suggestion", predictiveItem.Suggestion) </span>
            <div id="viewDetailsDailySpending" class="viewDetailsDailySpending" style="display: inline-block;width: 40px;">                
                <img class="viewDetailsDailySpending" src="@string.Format("/Images/Customers/{0}", "idea.png")" alt="" id="ideaImage" style="width:40px; height:40px;" />
            </div>*@
        </a>
    }
</div>








